.post-container {
    display: flex;
    flex-direction: column;
    margin: 20rpx;
    background-color: #fff;
    border-bottom: 1px solid #ededed;
    padding: 10px 0;
}

.post-author {
    margin: 10rpx 0 20rpx 0;
}

.post-author-img {
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}

.post-time {
    margin-bottom: 5px;
    margin-left: 10px;
    vertical-align: middle;
    font-size: 26rpx;
}

.post-title {
    font-size: 34rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
}

.post-image {
    padding: 20rpx 0;
    width: 100%;
    height: 340rpx;
    box-sizing: border-box;
}

.post-content {
    color: #666;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
}

.post-like {
    font-size: 13px;
    flex-direction: row;
    line-height: 16px;
}

.post-like-img {
    height: 16px;
    width: 16px;
    margin-right: 8px;
    vertical-align: middle;
}

.post-like-font {
    vertical-align: middle;
    margin-right: 20px;
}
